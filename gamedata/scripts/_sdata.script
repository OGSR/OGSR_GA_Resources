local SGameMtlFlagKeys = {
	"flActorObstacle",
	"flBloodmark",
	"flBounceable",
	"flClimable",
	"flDynamic",
	"flInjurious",
	"flLiquid",
	"flPassable",
	"flSlowDown",
	"flSuppressShadows",
	"flSuppressWallmarks" 
}

local function get_mtl_flags(Flags)
	local str
	for _, k in ipairs(SGameMtlFlagKeys) do
		local fv = SGameMtlFlags[k]
		if Flags:test(fv) then
			if not str then
				str = k
			else
				str = str .. "," .. k
			end
		end
	end
	return str or "<none>"
end
