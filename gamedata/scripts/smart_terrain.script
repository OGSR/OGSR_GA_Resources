function unregister_npc(npc)
	local sim = alife()
	
	if sim then
		local obj     = sim:object(npc.id)
		local strn_id = obj:smart_terrain_id()

		if strn_id ~= 65535 then
			if sim:object(strn_id) then
				sim:object(strn_id):unregister_npc(obj)
			end
		end
	end
end



