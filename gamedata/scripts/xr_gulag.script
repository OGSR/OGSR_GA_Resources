--Получить отношение персонажей смарта к указанному персонажу в онлайне
function gulag:get_personal_goodwill_online( target_obj )
	local rel = 50000
	for obj_id, obj in pairs( self.Object ) do
		if obj ~= true and level.object_by_id( obj_id ) then
			local o_rel = obj:general_goodwill( target_obj )
			--log3( "~~[%s.get_personal_goodwill_online] goodwill of [%s] to [%s] is [%s]", script_name(), obj:name(), target_obj:name(), o_rel )
			if o_rel < rel then
				rel = o_rel
			end
		end
	end
	return rel
end

--Получить отношение персонажей смарта к указанному персонажу в оффлайне. Использовать только для смартов со сталкерами! С монстрами не работает.
function gulag:get_personal_goodwill_offline( target_sobj )
	local rel = 50000
	ASSERT( target_sobj:clsid() == clsid.script_stalker, "this function don't support monsters!" )
	local target_comm = target_sobj:community()
	for obj_id, _ in pairs( self.Object ) do
		local sobj = alife():object(obj_id)
		ASSERT( sobj:clsid() == clsid.script_stalker, "Found monster [%s] in smart [%s]", sobj:name(), self.name )
		local o_rel = utils2.community_relation_safe( sobj:community(), target_sobj.id, target_comm )
		--log3( "~~[%s.get_personal_goodwill_offline] goodwill of [%s] to [%s] is [%s]", script_name(), sobj:name(), target_sobj:name(), o_rel )
		if o_rel < rel then
			rel = o_rel
		end
	end
	return rel
end

--Задать отношение персонажей смарта к указанному персонажу по его id. Должно работать и в оффлайне.
function gulag:set_personal_goodwill( goodwill, target_obj_id )
	for obj_id, _ in pairs( self.Object ) do
		relation_registry.set_personal_goodwill( obj_id, target_obj_id, goodwill )
	end
end


-- сколько народу заданного коммунити в гулаге?
function gulag:community_populaion_inside( community )
	local counter = 0
	for obj_id, _ in pairs( self.Object_begin_job ) do
		local sobj = alife():object( obj_id )
		if sobj then
			local comm, is_stalker = self.smrttrn:get_obj_community( sobj )
			if comm == community and not ( is_stalker and ogse.is_quest_npc( sobj ) ) then
				counter = counter + 1
			end
		end
	end
	return counter
end


