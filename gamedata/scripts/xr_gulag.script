-- получить гулаг персонажа
function get_npc_gulag( obj )
	local sim = alife()
	local sobj = sim:object( obj:id() )
	if sobj and sobj:smart_terrain_id() ~= 65535 then
		local strn = sim:object( sobj:smart_terrain_id() )
		ASSERT(strn, "smart with id [%s] not found", sobj:smart_terrain_id())
		return strn.gulag
	end
end

-- освободить персонажа от работы.
function resetJob( obj )
	local gulag = get_npc_gulag( obj )
	if gulag then
		gulag:free_obj_and_reinit( obj:id() )
		gulag:update()
	end
end


-- Выполняем проверки из зарегенных на уровне гулагов
-- level_gulags - это перечень модулей, каждый содержит свою функцию checkStalker с проверкой пригодности непися гулагу
-- как правило просто проверяется соответствие типа гулага и параметров непися: группировки, имени, ранга, профиля и т.п.
function checkNpc(npc_community, is_stalker, gulag_type, npc_rank, se_obj)
	local checker_func = is_stalker and "checkStalker" or "checkMonster"
	for _, script_name in pairs( level_gulags ) do
		if script_name[checker_func](npc_community, gulag_type, npc_rank, se_obj) then
			return true
		end
	end
	return false
end
