----------------------------------------------------------------
local attitude_neutal_threshold = get_float( "game_relations", "attitude_neutal_threshold" )
local attitude_friend_threshold = get_float( "game_relations", "attitude_friend_threshold" )
--
local function setGulagPersonalGoodwill( name_or_sid, goodwill, target_obj )
	ASSERT( target_obj, "" )
	local id = type(target_obj.id) == "function" and target_obj:id() or target_obj.id
	local gulag = get_gulag( name_or_sid )
	gulag:set_personal_goodwill( goodwill, id )
end
--Сделать указанного персонажа врагом всех персонажей смарта
function setGulagEnemy( name_or_sid, target_obj )
	setGulagPersonalGoodwill( name_or_sid, attitude_neutal_threshold - 3000, target_obj )
end
--Сделать указанного персонажа нейтральным для всех персонажей смарта
function setGulagNeutral( name_or_sid, target_obj )
	setGulagPersonalGoodwill( name_or_sid, attitude_neutal_threshold + 600, target_obj )
end
--Сделать указанного персонажа другом для всех персонажей смарта
function setGulagFriend( name_or_sid, target_obj )
	setGulagPersonalGoodwill( name_or_sid, attitude_friend_threshold + 500, target_obj )
end
--
local function getGulagPersonalGoodwill( name_or_sid, target_obj )
	local gulag = get_gulag( name_or_sid )
	ASSERT( target_obj, "" )
	if type(target_obj.id) == "function" then
		return gulag:get_personal_goodwill_online( target_obj )
	else
		return gulag:get_personal_goodwill_offline( target_obj )
	end
end
--Является ли указаный персонаж врагом для персонажей смарта.
function isGulagEnemy( name_or_sid, target_obj )
	return getGulagPersonalGoodwill( name_or_sid, target_obj ) < attitude_neutal_threshold
end
--Является ли указаный персонаж нейтральным для персонажей смарта.
function isGulagNeutral( name_or_sid, target_obj )
	local rel = getGulagPersonalGoodwill( name_or_sid, target_obj )
	return rel >= attitude_neutal_threshold and rel < attitude_friend_threshold
end
--Является ли указаный персонаж другом для персонажей смарта.
function isGulagFriend( name_or_sid, target_obj )
	return getGulagPersonalGoodwill( name_or_sid, target_obj ) >= attitude_friend_threshold
end
