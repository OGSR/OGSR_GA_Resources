-- установить логику и сообщить смарту, что объект перешёл в онлайн.
-- вызывается из net_spawn() объектов
function setup_gulag_and_logic_on_spawn( obj, st, sobject, stype, loaded )
	local sobj = alife():object(obj:id()) --KRodin: именно это использовать, а не sobject!!!
	ASSERT(sobj, "")
	local strn_id = sobj.smart_terrain_id and sobj:smart_terrain_id() or 65535
	local strn = alife():object( strn_id )
	--
	if strn_id == 65535 then --у моба нет смарта - значит нет смысла с ним дальше что-то делать
		if not sobj.has_none_true then
			log3( "!![%s] smart_terrain not found in [%s]", script_name(), obj:name() )
		end
		xr_logic.initialize_obj( obj, st, loaded, db.actor, stype )
		return
	elseif not strn then
		abort( "SMART WIH ID [%s] NOT FOUND !", strn_id )
	elseif strn:clsid() ~= clsid.smart_terrain then
		abort( "IS NOT SMART [%s] !", strn:name() )
	elseif not strn.gulag then
		abort( "GULAG NOT FOUND IN SMART [%s] !", strn:name() )
	end
	--
	local need_setup_logic = strn.gulag.Object_begin_job[obj:id()] and ( not loaded or st.loaded_gulag_name ~= strn.gulag.name )
	local need_setup_restrictors = strn.gulag.Object_begin_job[obj:id()]
	--
	strn.gulag:object_setup_online( obj:id(), obj, need_setup_logic, need_setup_restrictors )
	--
	if not need_setup_logic then
		xr_logic.initialize_obj( obj, st, loaded, db.actor, stype)
	end
end

