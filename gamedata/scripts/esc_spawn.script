function blockpost_case_go_online(actor, npc)
	local sim = alife()
	local sobj = sim:story_object(story_ids.Escape_blockpost_case)
	if sobj then
		sim:set_switch_online(sobj.id, true)
		sim:set_switch_offline(sobj.id, false)
	end
end

