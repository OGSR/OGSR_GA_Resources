[car_definition]

camera_pos        		= -0.5, 1.2, -0.5

driving_wheels    		= back_left_wheel,back_right_wheel 	; ведущие колёса
steering_wheels   		= front_left_wheel,front_right_wheel; рулевые колёса
breaking_wheels   		= back_left_wheel,back_right_wheel,front_left_wheel,front_right_wheel 	; тормозящие колёса
doors             		= left_door,right_door		; двери
steer             		= stearing_wheel 					; руль
driver_place      		= seat_left 						; место водителя
exhausts          		= exhausts 							; выхлопная труба
exhaust_particles 		= vehiclefx\exhaust_1
damage              	= damage_bones

;------ Factory parameters of Engine -------------------------------------------

fuel_tank         		= 30         	; L
fuel_consumption  		= 9.0	       	; L / (100k R); liters per 100 000 rotations
engine_power      		= 28        	; horse_power (kW=hp*0.808) max power
max_power_rpm     		= 3500        	; (nominal rpm ) on this rpm value engine power reaches maximum, must be within every diapason 	- shift down/ shift up
max_torque_rpm    		= 2500       	; on this rpm engine torque reaches maximum

power_increment_factor	= 0.01
power_decrement_factor	= 0.1
rpm_increment_factor	= 0.05
rpm_decrement_factor	= 0.1
m_power_neutral_factor	= 0.75

; additional engine parameters

max_engine_rpm    		= 5000			; rpm (5000) rpm will never be more
idling_engine_rpm		= 850       	; rpm (750) min rpm - starts from this rpm value

;------ Adjustment a wheel -----------------------------------------------------

reference_radius  		= 0.34			; Радиус колеса, используемый при просчёте двигателя
axle_friction     		= 0.00001      	; Ослабление скорости в неетральной позиции. (N*m)
steering_speed    		= 0.6        	; Время поворота рулевого колеса, в максимум. rps (1)
steering_torque   		= 900000.    	; Сила гидроусилителя руля. (N*m)
break_torque      		= 0.06        	; Сила тормозных колодок. (N*m)
break_time        		= 1.0         	; время нарастания силы торможения до максимума, при подтормаживании (стрелка назад)
hand_break_torque 		= 0.055        	; сила торможения пробелом (по умолчанию = break_torque)

;------ Gearbox ----------------------------------------------------------------

main_gear_ratio    		= 10.63        	; Передаточное отношение
auto_transmission  		= on            ; Автоматическая коробка (on/off)

