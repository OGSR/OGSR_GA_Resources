[rx_wmgr_main]
; технические параметры:
enabled = true
update_period = 3000 ;мс время между апдейтами
combat_period = 800  ; минимальное время между апдейтами в бою
reload_period = 3500 ; минимальное время между апдейтами при перезарядке
idle_period = 10000  ; минимальное время между апдейтами в спокойном состоянии
return_period = 400000 ; максимальное время между возвращениями, для профилактики
sees_time = 4000       ; сколько помнить врага, для mode2 = 2
forbidden_weapons = wpn_rpg7 ; запрещенное к использованию оружие
min_condition = 0.2    ; минимальное состояние, при котором можно использовать
weapon_minmaxr = false ; брать параметры min_radius и max_radius из конфига оружия

[rx_wmgr_types] ; типы
list = 1,5,6,7,8,9 ; список типов - только целые числа
line = ef_weapon_type ; параметр в конфиге ствола, который будет считаться его типом

; для динамического режима выбора

; min_radius,max_radius ; для типа, если weapon_minmaxr = false
minmaxr_5 = 0,35   ;0,50
minmaxr_6 = 5,300  ;1,300
minmaxr_7 = 0,40   ;0,35
minmaxr_8 = 10,300 ;25,1025
minmaxr_9 = 50,150 ;10,900

; модификоторы расстояния
rsec_5 = 50,50,0,-100
rsec_6 = 0,20,30,30,30,30,25,25,25,25,20,4
rsec_7 = 2,50,30,20,10,0,-100
rsec_8 = -100,-40,20,30,45,55,60,60,70,80,90,100,120,140,160,180,200,220,250,300
rsec_9 = -100,10,30,50,50,50,50,50,50,30,20,0

;модификаторы противника
; actor,stalker,boar,bloodsucker,flesh,dog,pseudodog,cat,chimera,giant,zombie,burer,controller,poltergeist,snork,fracture,tushkano,psy_dog,psy_dog_phantom

enemy_5 = tushkano:10
;enemy_6 = burer:10,psy_dog_phantom:20
enemy_7 = monster:10
enemy_8 = tushkano:-10
enemy_9 = dog:10,chimera:20,giant:20,burer:20,controller:20,fracture:20,tushkano:10

[rx_wmgr_default]
;+++++++++++

; определение приоритета оружия:
; 0 - отключено, 1 - по цене, 2 - по параметрам, 3 - заданный вручную
mode1 = 3 ;Пусть будет по списку, т.к параметры не всегда адекватно настроены, а настраивать их у каждого оружия лень.

;+++++++++++

; режим выбора оружия:
; в бою
; 0 - движок(), 1 - наибольший приоритет, 2 - "долго заряжать", 3 - динамический
mode2	= 1 ; При 3 возникают баги с частой сменой оружия у НПС.
; в спокойном состоянии
; 0 - движок(), 1 - наибольший приоритет , 2 - лучшее наиболее приоритетного типа
mode2_idle	= 2

;++++++++++++

; приоритет типов, соответственно [types]- list
types = 0,1,5,7,15,20 ;KRodin: Изменять с осторожностью! Появляются баги с частой сменой оружия у НПС.

;++++++++++++

; коэффициенты расчетных параметров оружия, для определения приоритета
; используется для mode1 = 2
koeffs = koefs_def ; секция в этом файле

;++++++++++++

; приоритет оружия, больше значение - выше приоритет
; используется для mode1 = 3
priors = priors_def ; секция в этом файле

;++++++++++++

; увеличение приоритета при наличии обвеса, %
scope = 5; 10 ; оптический прицел
silencer = -10;5 ; глушитель
grenadelauncher = 20 ; гранатомет
grip = 10 ; ручка

;++++++++++++

; насторйки динамического режима (mode2 = 3)
max_pr_weapons = 8 ; максимальное кол-во учитываемого оружия ; не работает
mag_lowering = 20 ; на сколько процентов снизится приоритет при пустом магазине
mag_lowering_fc = 35 ; на сколько процентов снизится приоритет при пустом магазине(прямой контакт с врагом)
active_add = 5 ; добавка для оружия, которое уже в руках
tchange_time = 4000 ; время работы тормоза смены оружия, мс
tchange_time_fc = 5500 ; время работы тормоза смены оружия(прямой контакт с врагом)
change_rest_time = 500 ; минимальное время между сменой оружия, мс

;++++++++++++
addcost = 4000 ; значение прибавляется к цене оружия, используется для mode1 = 1
process_mode = 2 ; 0 - отключено, 1 - только во время боя, 2 - всегда, 3 - полный

disabled = false

