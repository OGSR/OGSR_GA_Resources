[main]
check_period		= 200	;мс ; время между проверками
forbidden_factions	= zombied	; группировки, для которых схема будет отключена полностью (community)
min_dist		= 15	;м ; ближе нельзя кидать
max_dist		= 60	;м ; дальше не можем (для максимального ранга персонажа)
mark_dist		= 35	;м ; радиус подсветки гранат на экране

; настройки респавна гранат в инвентарь
spawn_period		= 10	;сек ; время респавна гранат ; основной параметр, влияющий на частоту швыряний
max_grenade_num		= 2	; максимальное кол-во гранат у персонажа (разных типов гранат)

[forbidden_npcs];имена, профили НПС, для которых схема будет отключена полностью (name,profile_name)
mil_stalker0012
yantar_ecolog_general


