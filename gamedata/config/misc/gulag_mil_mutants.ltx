;---------------------------------------------------------------------------
;Гулаг мутантов у выхода на Радар.
;Задача - по определенному количеству мутантов ломиться на блокпост "Барьер"
;---------------------------------------------------------------------------

;первое состояние - mob_home, в котором мутанты собираются
[logic@mil_monster1]
active = mob_home@monster1

[mob_home@monster1]
path_home = home1
home_min_radius = 10
home_max_radius = 30



;второе состояние - mob_home, в котором мутанты бегут в другой mob_home
[logic@mil_monster2]
active = mob_home@monster2

[mob_home@monster2]
path_home = home2
home_min_radius = 10
home_max_radius = 30
aggressive_home


