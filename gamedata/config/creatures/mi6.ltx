[mi6]:helicopter

visual                  = physics\vehicles\mi6\veh_mi6.ogf

;;;;;;Дополнительные параметры для ПЗРК
evu					= 0.75 	; экранно-выхлопное устройство: во сколько раз снижается тепловая заметность вертолета
lipa				= 0 	; станция помех "Липа": максимальное отклонение видимой ракетой позиции от реальной
flares				= 0 	; тепловые ловушки: не работает
engine_h			= 6 	; высота двигателя над object:position()
;;;;;;

//параметры построения пути
path_linear_acc_fw				=  8; 3;5; 3.0 ;m/s  ; линейное ускорение при разгоне
path_linear_acc_bk				=  6;2;4; 0.5; 3;  3.5;3 ;8.0 ;m/s	; линейное ускорение торможения


path_angular_sp_pitch			= 3.25 ;0.35; 0.65; 0.85; 0.45	; скорость изменения высоты пути при скорости "velocity"
path_angular_sp_pitch_0			= 6.5 ;(6.5	m/sec скороподъемность по ТТХ)	 скорость изменения высоты пути при скорости "0"
path_angular_sp_heading			= 0.75 ;0.5 ;0.75 ; угловая скорость пути при скорости "velocity"
path_angular_sp_heading_0		= 1;0.9		    ; угловая скорость пути при скорости "0"m/s

magic_angle				= 0.3

//пфраметры наклона модели 
model_angular_sp_bank		= 0.2 ;0.4 ; скорость поворота модели по оси Z (как быстро модель повернется по курсу движения с учетом угловой скорости)
model_angular_sp_pitch		= 0.05 ;     ; скорость поворота модели по оси X в зависимости от текущей линейной скорости
model_pitch_koef		= 0.01;0.016   ; коэф наклона модели по оси X в зависимости от текущей линейной скорости
model_bank_koef			= 0.018;0.008 ;0.018    ; коэф наклона модели по оси Z в зависимости от текущих линейной и угловой скоростей
on_point_range_dist		= 10.0    ; служебная информация


;default, can be redefined by script
capacity			= 90 ; максимальное количество десантников
velocity			= 30;30;(56 m/sec кр. скорость по ТТХ)  скорость, с которой патрулировать
attack_velocity			= 30;15.0; (69 m/sec макс. скорость по ТТХ)   скорость, с которой атаковать врага
time_between_rocket_attack	= 1000 ; 1500 ; msec  задержка между ракетами

use_rocket			= false			;              использовать ракеты при атаке
use_mgun			= false			;              использовать пулемет при атаке
missiles			= 0
min_mgun_attack_dist		= 0 ;30 ;15.0	;m   мин расстояние при котором можно исп пулемет
max_mgun_attack_dist		= 0 ;m   макс расстояние при котором можно исп пулемет
min_rocket_attack_dist		= 0	;m   мин расстояние при котором можно исп ракеты
max_rocket_attack_dist		= 0 ;150.0 ;m   макс расстояние при котором можно исп ракеты
flame_start_health			= 0.4  ; уровень здоровья, ниже которого вертолёт начинает дымить

; ------------------------- параметры для универсальной боевой схемы
flyby_attack_dist           = 100;200 ;70
search_attack_dist          = 70 ;55 ;80
search_velocity		    = 5  ; скорость (м/с) облёта врага по кругу в режиме поиска
round_velocity		    = 10 ; скорость (м/с) облёта врага в режиме атаки
forget_timeout		    = 40  ; в течении этого времени (в сек) вертолёт помнит врага, если не видит его

immunities_sect		= sect_mi6_immunities

[sect_mi6_immunities]
burn_immunity		= 0.1	
strike_immunity		= 1
shock_immunity		= 0.0
wound_immunity		= 0.0
radiation_immunity	= 0.0
telepatic_immunity	= 0.0
chemical_burn_immunity	= 0.0
fire_wound_immunity	= 0.0	; не работает
explosion_immunity	= 0.4
