; -*- mode: conf-windows; coding: windows-1251-dos -*-
;
; Рестрикторы шума вентиляторов в X-10

[logic]
active = ph_sound@on

[ph_sound@on]
snd_object = ambient\cooling_run
looped = true
on_info = {+bar_deactivate_radar_done} ph_sound@off

[ph_sound@off]
snd_object = ambient\cooling_stop
looped = false
on_signal = sound_end | nil %=release%
