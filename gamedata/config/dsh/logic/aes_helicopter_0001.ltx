; -*- mode: conf-windows; coding: windows-1251-dos -*-

[logic]
active = heli_move1
on_hit = hit

[heli_move1]
path_move = aes_heli_attack_desant_walk_begin3
on_info = {+aes_desant_go} heli_move2
engine_sound = false
combat_safe_altitude = -100

[heli_move2]
path_move = aes_heli_attack_desant_walk3
path_look = aes_heli_attack_desant_look3
on_signal = final | %+aes_desant_wave3% heli_move3
combat_ignore = true
on_signal2 = sound | %+aes_first_wave_sound%
mute = true
combat_safe_altitude = -100

[heli_move3]
path_move = aes_heli_attack_desant_walk3_2
on_signal = down | %+aes_heli_down%
combat_ignore = true
on_signal2 = sound2 | %+aes_choper_hunt_1%
mute = true
combat_safe_altitude = -100
on_info = {+sar_monolith_destroy} heli_move@death

[hit]
on_info = {+aes_first_wave_sound} %+aes_choper_hunt_2 =heli_start_flame% heli_move4

[heli_move4]
path_move = aes_heli_attack_desant_walk3_3
combat_ignore = true
mute = true
combat_safe_altitude = -100
on_info = {=heli_health_le(0.3)} heli_move@death, {+sar_monolith_destroy} heli_move@death

[heli_move@death]
path_move = heli_death_way
invulnerable = true
on_signal = arrived | heli_move@silent
combat_ignore = true

[heli_move@silent]
path_move = heli_death_way
invulnerable = true
engine_sound = false 
combat_ignore = true
