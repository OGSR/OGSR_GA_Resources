; -*- mode: conf-windows; coding: windows-1251-dos -*-
[logic]
active = heli_move1

[heli_move1]
path_move = aes_heli_attack_desant_walk_begin6
on_info = {+aes_actor_gate} heli_move2
engine_sound = false
on_info2 = {+aes_actor_road} heli_move4
on_info3 = {=heli_health_le(0.3)} heli_move@death, {+sar_monolith_destroy} heli_move@death
combat_safe_altitude = -100

[heli_move2]
path_move = aes_heli_attack_desant_walk6
path_look = aes_heli_attack_desant_look6
invulnerable = true
immortal = true
combat_ignore = true
on_signal = desant | %+aes_desant_wave5%
on_signal2 = final | heli_move3
on_info = {+aes_actor_road} heli_move4
combat_safe_altitude = -100

[heli_move3]
path_move = aes_heli_attack_desant_walk6_2
on_info = {+aes_actor_road} heli_move4
on_info2 = {=heli_health_le(0.3)} heli_move@death, {+sar_monolith_destroy} heli_move@death
combat_safe_altitude = -100

[heli_move4]
path_move = aes_heli_attack_desant_walk6_3
path_look = aes_heli_attack_desant_look6_3
on_signal = desant2 | %+aes_desant_wave6%
on_signal2 = final | heli_move3
combat_safe_altitude = -100
on_info = {=heli_health_le(0.3)} heli_move@death, {+sar_monolith_destroy} heli_move@death

[heli_move@death]
path_move = heli_death_way
invulnerable = true
on_signal = arrived | heli_move@silent
combat_ignore = true

[heli_move@silent]
path_move = heli_death_way
invulnerable = true
engine_sound = false 
combat_ignore = true
