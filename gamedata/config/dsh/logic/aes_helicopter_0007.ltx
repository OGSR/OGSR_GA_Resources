; -*- mode: conf-windows; coding: windows-1251-dos -*-

[logic]
active = heli_move1
on_hit = hit

[hit]
on_info = {+aes_actor_road2} %+aes_choper_down_3%

[heli_move1]
path_move = aes_heli_attack_desant_walk_begin7
engine_sound = false
on_info = {+aes_actor_road2} heli_move2
on_info2 = {=heli_health_le(0.3)} heli_move@death, {+sar_monolith_destroy} heli_move@death
combat_safe_altitude = -100

[heli_move2]
path_move = aes_heli_attack_desant_walk7
path_look = aes_heli_attack_desant_look7
on_signal = desant | %+aes_desant_snipers%
on_signal2 = final | heli_move3
on_signal3 = sound | %+aes_sniper_desant_sound%
combat_safe_altitude = -100
on_info = {=heli_health_le(0.3)} heli_move@death, {+sar_monolith_destroy} heli_move@death

[heli_move3]
path_move = aes_heli_attack_desant_walk7_2
path_look = aes_heli_attack_desant_look7_2
combat_safe_altitude = -100
on_info = {=heli_health_le(0.3)} heli_move@death, {+sar_monolith_destroy} heli_move@death

[heli_move@death]
path_move = heli_death_way
invulnerable = true
on_signal = arrived | heli_move@silent
combat_ignore = true

[heli_move@silent]
path_move = heli_death_way
invulnerable = true
engine_sound = false 
combat_ignore = true
