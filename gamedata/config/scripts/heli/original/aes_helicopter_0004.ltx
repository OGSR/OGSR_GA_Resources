[logic]
active = heli_move1

[heli_move1]
path_move = aes_heli_attack_walk2
path_look = aes_heli_attack_look2
on_signal = sound | %+aes_first_sound%
;combat_enemy = area(600,-125,150,all),area(750,-125,150,all)
use_rocket			= true
use_mgun			= true
mute = true
combat_safe_altitude = -100
on_info = {=heli_health_le(0.3)} heli_move@death

[heli_move@death]
path_move = heli_death_way
invulnerable = true
on_signal = arrived | heli_move@silent
combat_ignore = true

[heli_move@silent]
