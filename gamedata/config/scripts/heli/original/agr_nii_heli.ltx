[logic]
active = heli_move@idle


[heli_move@idle]
engine_sound = false
path_move = agr_nii_way_suspend
;combat_ignore_cond = always
on_info = {+agr_nii_helicopter_atack} heli_move@patrol
combat_safe_altitude = -15

[heli_move@patrol]
path_move = agr_nii_heli_patrol
combat_enemy = area(-160,-185,150,all)
use_rocket			= true
use_mgun			= true
on_info = {=gulag_empty(agr_nii)} heli_move@idle2 %-agr_nii_helicopter_atack%
on_info2 = {+blowout} heli_move@idle2 %-agr_nii_helicopter_atack%
on_timer = 200000 | heli_move@idle2
combat_safe_altitude = -15


[heli_move@idle2]
engine_sound = true
path_move = agr_nii_way_suspend
;combat_ignore_cond = always
on_timer = 30000| heli_move@idle3
combat_safe_altitude = -15

[heli_move@idle3]
engine_sound = false
path_move = agr_nii_way_suspend
;combat_ignore_cond = always
combat_safe_altitude = -15
