[logic]
active = ph_sound@day
on_hit = hit@mafon

[ph_sound@day]
tips = switcher_on
nonscript_usable = false
on_use = %+gunsrepair_mafon_off =play_snd_from_obj2(device\click10b)%
snd = gunsrepair_music
on_info = {-blowout -horror_time -gunsrepair_mafon_off} ph_sound@day
on_info2 = {+horror_time -blowout -gunsrepair_mafon_off} ph_sound@horrortime
on_info3 = {+blowout -gunsrepair_mafon_off} ph_sound@blowout
on_info4 = {+gunsrepair_mafon_broke} sr_sound_act@gunsrepair
on_info5 = {+gunsrepair_mafon_off} ph_sound@off

[ph_sound@horrortime]
tips = switcher_on
nonscript_usable = false
on_use = %+gunsrepair_mafon_off =play_snd_from_obj2(device\click10b)%
snd = esc_music_horror_time
on_info = {+horror_time -blowout -gunsrepair_mafon_off} ph_sound@horrortime
on_info2 = {+blowout -gunsrepair_mafon_off} ph_sound@blowout
on_info3 = {-blowout -horror_time -gunsrepair_mafon_off} ph_sound@day
on_info4 = {+gunsrepair_mafon_broke} sr_sound_act@gunsrepair
on_info5 = {+gunsrepair_mafon_off} ph_sound@off

[ph_sound@blowout]
tips = switcher_on
nonscript_usable = false
on_use = %+gunsrepair_mafon_off =play_snd_from_obj2(device\click10b)%
on_info = {-blowout -horror_time -gunsrepair_mafon_off} ph_sound@day
on_info2 = {+horror_time -blowout -gunsrepair_mafon_off} ph_sound@horrortime
on_info3 = {+blowout -gunsrepair_mafon_off} ph_sound@blowout
on_info4 = {+gunsrepair_mafon_broke} sr_sound_act@gunsrepair
on_info5 = {+gunsrepair_mafon_off} ph_sound@off

[ph_sound@off]
on_info = {+gunsrepair_mafon_broke} sr_sound_act@gunsrepair
tips = switcher_off
nonscript_usable = false
on_use =  %-gunsrepair_mafon_off =play_snd_from_obj2(device\click10b)% ph_sound@day

[hit@mafon]
on_info = %+gunsrepair_mafon_broke%

[sr_sound_act@gunsrepair]
theme = gunsrepair_music_broke
on_signal = sound_end | sr_particle@smoke

[sr_particle@smoke]
name = explosions\expl_car_smoke_small
;одиночный вейпоинт, не требует НИ
path = esc_guns-repair_mafon_look
mode = 2
looped = false
;on_signal = particle_end | nil
;можно "починить" :)
on_info = {-gunsrepair_mafon_broke} ph_sound@day