[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = walker@begin
on_death = death
on_hit = hit
threshold = threshold@kaligula_threshold
danger = danger_condition

[hit]
on_info = %=kaligula_wound_effect%

[walker@begin]
path_walk = kaligula_bar_walk
path_look = kaligula_bar_look1
on_info = {+kaligula_goto_arena} walker@arena1 %=unmake_invulnerable%
on_timer = 10 | walker@bar1 %=make_invulnerable%

[walker@bar1]
path_walk = kaligula_bar_walk
path_look = kaligula_bar_look1
combat_ignore_cond = always
danger = danger_condition
on_timer = 10000 | walker@bar2
on_info = {+kaligula_goto_arena} walker@arena1 %=unmake_invulnerable%

