[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = walker
;combat_ignore = combat_ignore
on_death = death
threshold = threshold@zomb_fidel_threshold

[walker]
path_walk = zomb_graf_walk
path_look = zomb_koster
danger = danger_condition
combat_ignore_cond = {!actor_enemy !fighting_actor}
on_info = {+rad_zomb_company_superkontroler_atack} remark@psy

[remark@psy]
anim = psy_pain
;snd = garb_arthunter_phrase_1
;snd_anim_sync = true
no_move = true
target = nil
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
threshold = threshold@zomb_fidel_threshold
on_info = {+rad_attack_superkontroler_dead} kamp

[kamp]
center_point = zomb_koster
radius = 5
def_state_moving = run

[danger_condition]
ignore_distance = 0
ignore_distance_grenade = 0
ignore_distance_corpse = 0
ignore_distance_hit = 0
ignore_distance_sound = 0

[threshold@zomb_fidel_threshold]
max_ignore_distance = 0
ignore_monster = 0

[death]
on_info = %+zomb_graf_dead%

