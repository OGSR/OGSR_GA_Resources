none = true

[dont_spawn_loot]

[logic]
active = walker
;combat_ignore = combat_ignore
on_death = death
threshold = threshold@zomb_che_threshold

[walker]
path_walk = rad_zomb_che_walk
path_look = zomb_koster
danger = danger_condition
combat_ignore_cond = {!actor_enemy !fighting_actor}
