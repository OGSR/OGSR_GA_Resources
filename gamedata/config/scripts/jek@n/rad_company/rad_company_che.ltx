radius = 5
def_state_moving = run

[walker1]
path_walk = rad_zomb_che_walk1
path_look = zomb_zahar_look
danger = danger_condition
combat_ignore_cond = {!actor_enemy !fighting_actor}
def_state_moving = walk
on_timer = 35000 | walker2
