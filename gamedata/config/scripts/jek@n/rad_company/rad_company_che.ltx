;combat_ignore_cond = {!actor_enemy !fighting_actor}
def_state_moving = walk
on_timer = 35000 | walker
on_info = {+rad_zomb_company_superkontroler_atack} remark@psy

[remark@psy]
anim = psy_pain
;snd = garb_arthunter_phrase_1
;snd_anim_sync = true
no_move = true
target = nil
meet = no_meet
combat_ignore_cond = always
threshold = threshold@zomb_che_threshold
danger = danger_condition
on_info = {+rad_attack_superkontroler_dead} kamp

[danger_condition]
ignore_distance = 0
ignore_distance_grenade = 0
ignore_distance_corpse = 0
ignore_distance_hit = 0
ignore_distance_sound = 0

[threshold@zomb_che_threshold]
