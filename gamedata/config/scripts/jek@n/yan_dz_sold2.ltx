[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = walker@sold2

[walker@sold2]
path_walk = yan_sold2_walk
path_look = yan_sold2_look
meet = no_meet
danger = danger_condition
combat_ignore = always
combat_ignore_cond = always
on_signal = arrived | remark@pricel

[remark@pricel]
anim = threat
no_move = true
meet = no_meet
target = 7108
danger = danger_condition
combat_ignore = always
combat_ignore_cond = always
on_info = {+yan_sold_hitted_by_major} walker@wait_for_actor

[walker@wait_for_actor]
path_walk = yan_sold2_walk
path_look = yan_sold2_look
meet = meet
danger = danger_condition
combat_ignore = always
combat_ignore_cond = always

[meet]
use = true
use_wpn = true
meet_talk_enabled = true
victim = 3|actor
victim_wpn = 3|actor

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0