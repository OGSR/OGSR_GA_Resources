[smart_terrains]
none = true

[logic]
active = mob_camp@base
;active = mob_camp@before_ochyag
on_death = mob_death

[mob_camp@base]
path_home = drifter_dog_walk_base
path_look = drifter_dog_look_base
home_min_radius  = 1
home_max_radius = 2
on_info = {+dik_goto_pos1 -af_light_have} mob_walker@pos0, {+af_light_have} mob_camp@house

[mob_walker@pos0]
path_walk = drifter_dog_walk_pos_0
path_look = drifter_dog_look_pos_0
on_signal       = arrived | mob_remark@danger %+dog_meets_danger%
on_info = {+kulg_zasada_1_boets_1_dead +kulg_zasada_1_boets_2_dead +kulg_zasada_1_boets_3_dead -af_light_have} mob_camp@pos1, {+af_light_have} mob_camp@house

[mob_camp@pos1]
