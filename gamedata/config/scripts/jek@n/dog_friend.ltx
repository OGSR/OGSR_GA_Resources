home_min_radius  = 20
home_max_radius = 25
on_info = {+kulg_zasada_1_boets_1_dead +kulg_zasada_1_boets_2_dead +kulg_zasada_1_boets_3_dead -af_light_have} mob_camp@pos2, {+af_light_have} mob_camp@house

