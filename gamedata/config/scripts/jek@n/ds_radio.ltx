[logic]
active = ph_sound1
on_hit = hit

[hit]
on_info = %+ds_radio_off%

[ph_sound1]
snd = radio_music_ds_hunter
on_info = {-blowout -horror_time} ph_sound1
on_info2 = {+horror_time -blowout} ph_sound@3
on_info3 = {+blowout} ph_sound@blowout

[ph_sound@3]
snd = esc_music_horror_time
on_info = {-blowout -horror_time} ph_sound1
on_info2 = {+horror_time -blowout} ph_sound@3
on_info3 = {+blowout} ph_sound@blowout

[ph_sound@blowout]
on_info = {-blowout -horror_time} ph_sound1
on_info2 = {+horror_time -blowout} ph_sound@3
on_info3 = {+blowout} ph_sound@blowout



