[smart_terrains]
none = true

[logic]
active = walker@begin
combat_ignore = combat_ignore
on_death = death
threshold = threshold@orujeinik_threshold

[walker@begin]
path_walk =	bratstvo_orujeinik_walk
path_look =	bratstvo_orujeinik_look
on_timer = 100 | walker 

[walker]
path_walk =	bratstvo_orujeinik_walk
path_look =	bratstvo_orujeinik_look
combat_ignore_cond = always
danger = danger_condition
meet = meet@orujeinik
on_info = {+vrach_about_agent} walker@p1

[walker@p1]
;path_walk =	bratstvo_orujeinik_walk_p1
;path_look =	bratstvo_orujeinik_look_p1
path_walk =	bratstvo_vrach_walk_p5
path_look =	bratstvo_vrach_look_p5
combat_ignore_cond = always
danger = danger_condition
on_info = {+vrach_goto_p2} walker@p6

[walker@p2]
path_walk =	bratstvo_vrach_walk_p2
path_look =	bratstvo_vrach_look_p2
combat_ignore_cond = always
danger = danger_condition
meet = no_meet
on_signal       = arrived | walker@p3

[walker@p3]
