danger = danger_condition
combat_ignore_cond = always

[meet@wound]
meet_state = 8| wounded_heavy_2
meet_state_wpn = 8| wounded_heavy_2
victim = 8| nil
victim_wpn = 8| nil
use = true
use_wpn = true

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[threshold@bratstvo_agent_1_threshold]
