[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = kamp@begin
combat_ignore = combat_ignore
on_death = death
; on_hit = hit
; on_combat = combat
threshold = threshold@dar_gaz_dolg_lider_threshold

[hit]
on_info = %+dar_gaz_lider_dead%

[combat]
combat_type = camper

[kamp@begin]
center_point = gaz_dolg_walk_p4
radius = 3 
on_timer = 100 | kamp

[kamp]
center_point = gaz_dolg_walk_p4
radius = 3 
def_state_moving = sprint
meet = no_meet
on_timer = 9000 | walker@1

[walker@1]
path_walk = gaz_dolg_walk_p4
path_look = gaz_dolg_lider_look_1
on_timer = 7000 | walker@2

[walker@2]
path_walk = gaz_dolg_walk_p4
path_look = gaz_dolg_lider_look_2
on_timer = 7000 | walker@1


[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[threshold@dar_gaz_dolg_lider_threshold]
max_ignore_distance = 0
ignore_monster = 0

[combat_ignore]
combat_ignore = always

[death]
on_info = %+dar_gaz_lider_dead%

