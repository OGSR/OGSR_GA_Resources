;----------- Аномалия Жарка -----------------------
[zone_zharka_static]
script_binding      = ogse_dbg_anomaly_binder.init

GroupControlSection	= spawn_group_zone
$spawn 			= "zones\zharka_statik"
$prefetch 		= 16
class			= ZS_MBALD
hit_impulse_scale	= 0.0
effective_radius	= 1.3 ;размер радиуса в процентах от оригинального, где действует зона
sound			= zone_mosquito_bald
postprocess		= postprocess_flame

ef_anomaly_type			= 1
ef_weapon_type			= 13

artefacts		= af_drops, 0.8, af_fireball, 0.4, af_cristall, 0.0
BirthProbability = 0.11

;----------- Свойства аномалии -------------------
min_start_power		= 0.99
max_start_power		= 1.00
attenuation			= 1
period				= 1
min_artefact_count	= 0
max_artefact_count	= 1
artefact_spawn_idle	= 54  ;насколько часто спонить артефакты в офлайне, в часах
artefact_spawn_rnd	= 20  ;вероятность заспавнить артефакт в процентах.

idle_particles		= _ecp\group_items\anomaly_burner_fog
blowout_particles	= static\zharka_static

hit_small_particles			= damage_fx\burn_creatures
hit_big_particles			= damage_fx\burn_creatures00
idle_small_particles		= damage_fx\burn_creatures
idle_big_particles			= damage_fx\burn_creatures00

idle_particles_dont_stop	= true;

idle_sound			= anomaly\torrid_idle					;iinoiyiiue caoe
blowout_sound		= anomaly\fireball_blow			;ai a?aiy aua?ina(oaa?a) a oaio?a aiiiaeee	
hit_sound			= anomaly\fireball_hit								;ia ia?niia?a, eiaaa oio iieo?aao oeo
entrance_sound		= anomaly\fireball_hit						;i?e iiiaaaiee iauaeoa a aiiiaee?

hit_type			= burn

disable_time			= 10000	;время игнорирования неживого объекта в зоне (-1 если не нужно)
disable_time_small		= -1	;время игнорирования маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time		= 50000	;время отключения idle партиклов

ignore_nonalive		= false
ignore_small		= false
ignore_artefacts	= true

blowout_light		= on
light_color		    = 1.9,1.6,1.3
light_range		    = 18.0
light_time 		    = 10
light_height		= 2		;подъем источника света на высоту

idle_light			= off
idle_light_range	= 8.0
idle_light_range_delta = 0.2
idle_light_anim		= koster_01
idle_light_height	= 0.70

awaking_time		= 100
blowout_time		= 8000	
accamulate_time		= 1000

visible_by_detector = on

blowout_wind		= off
spawn_blowout_artefacts = off

