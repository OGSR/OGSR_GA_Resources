;----------- Облако дыма (смертоносное) -----------------------
[zone_deadly_smoke]
script_binding      = ogse_dbg_anomaly_binder.init

GroupControlSection		= spawn_group_zone
$spawn 					= "zones\zone_deadly_smoke"
$prefetch 				= 16
class					= ZS_MBALD
hit_impulse_scale		= 0.3
effective_radius		= 1.2
actor_blowout_radius_percent	= 0.6

ef_anomaly_type			= 1
ef_weapon_type			= 13

sound					= zone_mosquito_bald

postprocess				= postprocess_deadly_smoke

BirthProbability		= 0.2
hit_type				= chemical_burn

min_start_power			= 0.99
max_start_power			= 1.00
attenuation				= 1
period					= 1
min_artefact_count		= 0
max_artefact_count		= 0

idle_particles				= a_ufp_particles\smoke_anomalie_idle
blowout_particles			= a_ufp_particles\smoke_anomalie_blow

hit_small_particles			= a_ufp_particles\smoke_anomalie_hit
hit_big_particles			= a_ufp_particles\smoke_anomalie_hit
idle_small_particles		= a_ufp_particles\smoke_anomalie_idle
idle_big_particles			= a_ufp_particles\smoke_anomalie_idle
entrance_small_particles	= a_ufp_particles\smoke_anomalie_blow
entrance_big_particles		= a_ufp_particles\smoke_anomalie_blow

idle_sound			= ambient\x18\x18_wind_1
blowout_sound		= ambient\x18\x18_wind_1
hit_sound			= ambient\x18\x18_wind_1
entrance_sound		= ambient\x18\x18_wind_1


awaking_time		= 100
blowout_time		= 500
accamulate_time		= 1000

blowout_light_time		= 200
blowout_explosion_time	= 200
blowout_particles_time	= 200
blowout_sound_time  	= 100

disable_time		= 50
disable_time_small	= 500
disable_idle_time	= 100	

ignore_nonalive		= true
ignore_small		= false
ignore_artefacts	= false

blowout_light		= off
light_color		    = 0.01,0.4,0.01
light_range		   	= 2
light_time 		   	= 0.4
light_height		= 1.5	

idle_light			= off
idle_light_range	= 2
idle_light_range_delta = 0.2
idle_light_anim		= koster_01
idle_light_height	= 1.5

visible_by_detector = on

artefacts			= af_gold_fish, 0.4

spawn_blowout_artefacts 		= off

artefact_spawn_probability 	= 0.2
artefact_spawn_particles	= anomaly\a-01-heat-smoke_old00
artefact_born_sound 		= ambient\silence

throw_out_power 			= 1
artefact_spawn_height 		= 0.3

blowout_wind				= off

blowout_wind_time_start     	= 0
blowout_wind_time_peak      	= 300
blowout_wind_time_end		= 600
blowout_wind_power			= 0.9

