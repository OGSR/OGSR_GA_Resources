;----------- Радиоактивная зона -----------------------
[zone_radioactive]
script_binding      = ogse_dbg_anomaly_binder.init

GroupControlSection	= spawn_group_zone
$spawn 			= "zones\radioactive"
;$prefetch 		= 16
class			= Z_RADIO
hit_impulse_scale	= 0.01
effective_radius	= 1.00 ;размер радиуса в процентах от оригинального, где действует зона
sound			= zone_mosquito_bald
;postprocess	= postprocess_rad

ef_anomaly_type	= 3
ef_weapon_type	= 15

artefacts		= 
BirthProbability = 0.0

min_start_power		= 0.99
max_start_power		= 1.00
attenuation			= 0.1
period				= 1
min_artefact_count	= 0
max_artefact_count	= 0

hit_type		    = radiation

disable_time		= -1	;время игнорирования неживого объекта в зоне (-1 если не нужно)
disable_time_small	= -1	;время игнорирования маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time	= -1	;время отключения idle партиклов

ignore_nonalive		= true;
ignore_small		= false;
ignore_artefacts	= true

blowout_light		= off
idle_light			= off

awaking_time		= 100
blowout_time		= 100	
accamulate_time		= 100 ;500

visible_by_detector = on

blowout_wind		= off
spawn_blowout_artefacts = off

;----------- Радиоактивная зона слабая -----------------------
[zone_radioactive_weak]:zone_radioactive
$spawn 			= "zones\radioactive_weak"
min_start_power		= 0.015
max_start_power		= 0.016

;----------- Радиоактивная зона средняя -----------------------
[zone_radioactive_average]:zone_radioactive
$spawn 			= "zones\radioactive_average"
min_start_power		= 0.035
max_start_power		= 0.036

;----------- Радиоактивная зона сильная -----------------------

[zone_radioactive_strong]:zone_radioactive
$spawn 			= "zones\radioactive_strong"
accamulate_time		= 75
min_start_power		= 0.065
max_start_power		= 0.066

;----------- Радиоактивная зона смертельная -----------------------
[zone_radioactive_killing]:zone_radioactive
$spawn 			= "zones\radioactive_killing"
accamulate_time		= 50

;----------- Рукотворная аномалия без артов -----------------------
[handmade_zone_radioactive]:zone_radioactive
$spawn 						= "zones\handmade_zone_radioactive"